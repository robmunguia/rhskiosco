<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rh_synergy.kiosco">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".NominaActivity"
            android:label="@string/title_activity_nomina"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".nominas"
            android:label="@string/title_activity_recibos" />
        <activity
            android:name=".PrenominaActivity"
            android:label="@string/title_activity_prenomina" />
        <activity android:name=".AhorroActivity" android:label="@string/title_activity_ahorro"></activity>
    </application>

</manifest>
